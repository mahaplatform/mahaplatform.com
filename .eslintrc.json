{
  "parser": "@babel/eslint-parser",
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "classes": true,
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module",
    "babelOptions": {
      "configFile": "./src/core/utils/babel.config.js"
    }
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "globals": {
    "Caman": true,
    "Buffer": true,
    "__dirname": true,
    "__filename": true,
    "process": true,
    "before": true,
    "after": true,
    "__webpack_require__": true,
    "importScripts": true
   },
  "rules": {
    "template-curly-spacing" : "off",
    "strict": 0,
    "comma-dangle": [
      2,
      "never"
    ],
    "indent": [
      "error",
      2, {
        "ignoredNodes": ["TemplateLiteral"]
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-case-declarations": "off",
    "no-class-assign": "off",
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "none"
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "react/jsx-uses-react":  "error",
    "react/jsx-uses-vars":  "error",
    "react/display-name": "off",
    "semi": [
      "error",
      "never"
    ]
  }
}
