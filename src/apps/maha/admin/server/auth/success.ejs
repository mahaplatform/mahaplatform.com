<script src="/js/localforage.min.js"></script>

<script>
  localforage.config({
    name: 'local',
    storeName: 'cache'
  });
  localforage.getItem('account').then(function (data) {
    if(!data) {
      data = {
        active: 0
      }
    }
    data.account = {
      token: '<%= token %>'
    }
    localforage.setItem('account', data).then(function () {
      window.location.href = "/admin";
    });
  });
</script>
