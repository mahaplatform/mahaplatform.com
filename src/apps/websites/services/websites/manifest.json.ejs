
{
   "short_name": "<%- site.title %>",
   "name": "<%- site.title %>",
   "icons": [
     {
       "src": "<%- icon(site.favicon, 'webp', { dpi: 1, fit: 'cover', w: 192, h: 192 }) %>",
       "type": "image/webp",
       "sizes": "192x192"
     },
     {
       "src": "<%- icon(site.favicon, 'png', { dpi: 1, fit: 'cover', w: 192, h: 192 }) %>",
       "type": "image/png",
       "sizes": "192x192"
     },
     {
       "src": "<%- icon(site.favicon, 'png', { dpi: 1, fit: 'cover', w: 100, h: 100, p: 46, bg: site.background_color.replace('#', '') }) %>",
       "sizes": "192x192",
       "type": "image/png",
       "purpose": "maskable"
     },
     {
       "src": "<%- icon(site.favicon, 'webp', { dpi: 1, fit: 'cover', w: 512, h: 512 }) %>",
       "type": "image/webp",
       "sizes": "512x512"
     },
     {
       "src": "<%- icon(site.favicon, 'png', { dpi: 1, fit: 'cover', w: 512, h: 512 }) %>",
       "type": "image/png",
       "sizes": "512x512"
     }
    ],
    "start_url": "/",
    "background_color": "<%- site.background_color %>",
    "display": "standalone",
    "scope": "/",
    "theme_color": "<%- site.theme_color %>"
}
