<!DOCTYPE html>
<html lang="en-us">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <link rel="stylesheet" type="text/css" href="/admin/css/semantic.min.css">
    <title>Subscribe to <%= program.get('title') %></title>
    <style>
      body {
        position: relative;
      }
      .overlay  {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0,0,0,.03);
        padding: 0.8em;
      }
      .panel {
        border: 1px solid rgba(0,0,0,.05);
        background-color: rgba(255, 255, 255, 1);
        padding: 0.8em;
        margin: 0 auto;
        width: 100%;
        max-width: 470px;
        margin-bottom: 1.8em;
      }
      .address {
        margin-bottom: 1.8em;
      }
      .subscription {
        margin-bottom: 0.8em;
      }
      .unsubscribe {
        margin-bottom: 1.8em;
      }
      .forwarded {
        margin-bottom: 1.8em;
        text-align: center;
      }
      .copyright {
        text-align: center;
        color: rgba(0, 0, 0, 0.6);
      }
      p {
        line-height: 1.8em !important;
      }
    </style>
  </head>
  <body>

    <div class="overlay">

      <div class="preferences">

        <div class="panel">

          <form method="post" action="/crm/subscribe/<%= program.get('code') %>" class="ui form">

            <h1><%= program.get('title') %></h1>

            <div class="ui field required">
              <label>First Name</label>
              <input name="first_name" value="<%= params.first_name %>" />
            </div>

            <div class="ui field required">
              <label>Last Name</label>
              <input name="last_name" value="<%= params.last_name %>" />
            </div>

            <div class="ui field required">
              <label>Email</label>
              <input name="email" value="<%= params.email %>" />
            </div>

            <div class="ui field">
              <div class="ui checkbox">
                <input id="subscribe" name="subscribe" type="checkbox" value="1"<%- params.subscribe === '1' ? ' checked="checked"' : ''  %> />
                <label for="subscribe">
                  I would like to receive marketing information about your program
                </label>
              </div>
            </div>

            <button class="ui blue button">Subscribe</button

          </form>

        </div>

        <div class="copyright">
          &copy; Copyright <%= program.get('title') %> <%= moment().format('YYYY') %>
        </div>

      </div>

    </div>

  </body>

</html>
